<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :product, :required => true%>
    <%= f.hidden_field :orderer, :value => current_user.id %>
    <%= f.input :price, :required => true %>

    <label class="decimal optional control-label">Vendor</label>
    <%= f.select :vendor, @vendors_arr  %>
    
    <% if current_user.has_role? :admin %>
      <br />    
      <label class="decimal optional control-label">Payed</label>
      <%= f.select(:payed, [['Nein', 0], ['Ja', 1]]) %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
