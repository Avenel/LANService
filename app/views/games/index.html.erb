<h1>Listing games</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Maxplayers</th>
    <th>Gamemodes</th>
    <th>Availableteams</th>
    <th>Genre</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.name %></td>
    <td><%= game.maxPlayers %></td>
    <td><%= game.gameModes %></td>
    <td><%= game.availableTeams %></td>
    <td><%= game.genre %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <% if current_user.has_role? :admin %>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

