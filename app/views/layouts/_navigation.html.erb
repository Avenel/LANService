<%= link_to "Lanservice", root_path, :class => 'brand' %>
<ul class="nav">
  <% if user_signed_in? %>

    <li><a href="/games">Spiele</a></li>
    <li><a href="/orders">Bestellungen</a></li>
    <li><a href="/vendors">Lieferanten</a></li>

    <li>
    <%= link_to 'Edit account', edit_user_registration_path %>
    </li>
    <% if current_user.has_role? :admin %>
      <li>
      <%= link_to 'Admin', users_path %>
      </li>
    <% end %>
  <% else %>
    <li>
    <%= link_to 'Sign up', new_user_registration_path %>
    </li>
  <% end %>

   <% if user_signed_in? %>
    <li>
      <a href="#" >[<%= current_user.name %>]</a>
    </li>
    <li>
      <% if current_user.has_role? :admin %>
        <a href="#" >[ADMIN] </a>
      <% end %>
    <li>
  
    <li>
      <% @games = Game.all %>
        <% @games_arr = Array.new %>

        <% @games.each do |game| %>
          <% @gitem = Array.new %>
          <% @name = game.name %>
          <% @id = game.id %>
          <% @gitem.push(@name) %>
          <% @gitem.push(@id) %>
          <% @games_arr.push(@gitem) %>
        <% end %>

      <%= form_tag(controller: "users", action: "toggleCurrentGame", method: "get") do %>
      <div class="form-inputs">
        <%= select(:user, :toggleCurrentGame, @games_arr) %>
        <%= submit_tag("Apply") %>
      </div>
      <% end %>
    </li>

    <%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %>
    </li>
  <% else %>
    <li>
    <%= link_to 'Login', new_user_session_path %>
    </li>
  <% end %>

</ul>
